@model List<Table>

<h1>Tables</h1>

<table class="table table-hover">
    <thead class="thead-light">
    <tr>
        <th>Name</th>
        <th>Fields count</th>
        <th>Rows count</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var table in Model)
    {
        <tr>
            <td>@table.Name</td>
            <td>@table.Fields.Count</td>
            <td>@table.Rows.Count</td>
            <td>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Table", new { name = table.Name })">Details</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Table", new { name = table.Name })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Create", "Table")">Create table</a>

<h3>Save Database</h3>
<form asp-controller="Home" asp-action="SaveDatabase" method="post">
    <div class="form-group">
        <label>Select File Path to Save:</label>
        <input type="text" name="filePath" class="form-control" required placeholder="Enter file path (e.g., C:\path\to\your\database.json)" />
    </div>
    <button type="submit" class="btn btn-primary">Save Database</button>
</form>

