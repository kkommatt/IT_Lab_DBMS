@model Table

<h1>Add row to table @Model.Name</h1>

@using (Html.BeginForm())
{
@foreach (var field in Model.Fields)
{
<div class="form-group">
    <label>@field.Name (@field.Type)</label>
    @if (field.Type == DataType.Date)
    {
    <input type="date" name="values[@field.Name]" class="form-control" required />
    }
    else if (field.Type == DataType.DateInterval)
    {
    <div class="row">
        <div class="col">
            <input type="date" name="values[@field.Name]_Start" class="form-control" placeholder="Start" required />
        </div>
        <div class="col">
            <input type="date" name="values[@field.Name]_End" class="form-control" placeholder="End" required />
        </div>
    </div>
    }
    else
    {
    <input type="text" name="values[@field.Name]" class="form-control" required />
    }
</div>
}
<button type="submit" class="btn btn-success">Add</button>
<a class="btn btn-secondary" href="@Url.Action("Details", "Table", new { name = Model.Name })">Return</a>
}
