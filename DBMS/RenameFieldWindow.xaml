<Window x:Class="DBMS.RenameFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="Rename Field" Height="200" Width="320">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Select Field to Rename:" Margin="0,0,0,10"/>
            <ComboBox x:Name="ComboBoxFields" Margin="0,0,0,10"/>
            <TextBlock Text="New Field Name:" Margin="0,0,0,10"/>
            <TextBox x:Name="TxtNewFieldName" Margin="0,0,0,10"/>
            <Button Content="Rename" Click="BtnRename_Click" />
        </StackPanel>
    </Grid>
</Window>
