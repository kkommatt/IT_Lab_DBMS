<Window x:Class="DBMS.TableViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="Table View" Height="400" Width="640"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="True"
                  SelectionUnit="FullRow"
                  IsReadOnly="True"
                  Margin="12,12,12,0"
                  VerticalAlignment="Top"
                  Height="300" />


        <Button x:Name="BtnAddRow" Content="Add row"
                Margin="0,320,0,0" Width="80"
                VerticalAlignment="Top" Click="btnAddRow_Click" />

        <Button x:Name="BtnEditRow" Content="Edit row"
                Margin="170,320,0,0" Width="80"
                VerticalAlignment="Top" Click="btnEditRow_Click" />

        <Button x:Name="BtnDeleteRow" Content="Delete row"
                Margin="340,320,0,0" Width="80"
                VerticalAlignment="Top" Click="btnDeleteRow_Click" />
        
        <Button x:Name="BtnRenameField" Content="Rename Field"
                Margin="510,320,0,0" Width="80"
                VerticalAlignment="Top" Click="BtnRenameField_Click" />


    </Grid>
</Window>